{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "src",
    "outDir": "lib",
    "declarationDir": "lib",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "build",
    "rollup.config.js"
  ],
  "include": [
    "./src/"
  ]
}
